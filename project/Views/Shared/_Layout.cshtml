<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - UniEvents</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <!-- إذا تستعمل مكتبة أيقونات مثل FontAwesome أضفها هنا -->
</head>
<body>
    <nav style="background: #2574fb; color: white; padding: 10px 0;">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div style="margin-left: 16px;">
                <span style="font-weight: bold;"><i class="fa fa-calendar"></i> UniEvents</span>
                <a href="/" style="color: white; margin: 0 8px;">Home</a>
                <a href="/Events" style="color: white; margin: 0 8px;">Events</a>
                <a href="/Bookings" style="color: white; margin: 0 8px;">My Bookings</a>
                <a href="/Profile" style="color: white; margin: 0 8px;">Profile</a>
            </div>
            <div style="margin-right: 16px;">
                @{
                    var userName = Context.Session.GetString("UserName") ?? "Guest";
                }
                <span>@userName</span>
                @if (Context.Session.GetInt32("UserId") != null)
                {
                    <a href="/User/Logout" class="btn btn-outline-primary" style="margin-left: 8px;">Logout</a>
                }
            </div>

        </div>
    </nav>

    <main>
        @RenderBody()
    </main>
</body>
</html>
